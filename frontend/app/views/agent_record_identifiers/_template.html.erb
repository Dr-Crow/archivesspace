<% define_template "agent_record_identifiers", jsonmodel_definition(:agent_record_identifier) do |form| %>
  <div class="subrecord-form-fields">
    <div class="agent-record-control-container">
      <%= form.label_and_select "identifier_type_enum", [""] + form.possible_options_for("identifier_type_enum", false) %>
      <%= form.label_and_select "source_enum", [""] + form.possible_options_for("source_enum", false) %>
      <div class="form-group required">
        <%= form.label "primary_identifier", :class => 'control-label col-sm-2' %>
        <div class="checkbox col-sm-9">
          <%= form.checkbox "primary_identifier", {} %>
        </div>
      </div>
      <%= form.label_and_textfield "record_identifier",  {:field_opts => {:size => 30, :class => "form-control"} }%>
    </div>
  </div>
<% end %>